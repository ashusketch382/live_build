generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Build {
  id             Int       @id @default(autoincrement())
  name           String    @unique
  content        String
  buildStartTime DateTime?
  buildEndTime   DateTime?
  onpremStatus   String
  dockerStatus   String
  comments       String?
  updatedAt      DateTime  @default(now()) @updatedAt
}